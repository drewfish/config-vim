"solarized
let g:solarized_termcolors=256
let g:solarized_visibility="low"

"NERDTree
let NERDTreeIgnore=['\.vim$','\~$','\.o$','\.d$']


"===========  FILETYPES  ==========="

au BufRead,BufNewFile *.pde set filetype=arduino
au BufRead,BufNewFile *.ino set filetype=arduino
